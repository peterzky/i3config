#Split Mode
set $split_mode Launch: [s]horizontal [v]vertical
bindsym $mod+w mode "$split_mode"
mode "$split_mode" {
   bindsym v      split h ;mode "default" ;exec termite
   bindsym s      split v ;mode "default" ;exec termite
   bindsym shift+v split h ;mode "default"
   bindsym shift+s split v ;mode "default"
   bindsym q mode "default"
   bindsym Esc    mode "default"
   bindsym Return mode "default"
}

# Start i3bar to display a workspace bar (plus the system information i3status
## window colors
set $bg-color 	         #2f343f
set $border 	           #2F925D
set $inactive-bg-color   #2f343f
set $text-color          #f3f4f5
set $inactive-text-color #676E7D
set $urgent-bg-color     #E53935

#                       border              background         text                 indicator
client.focused          $bg-color           $border          $text-color          #00ff00
client.unfocused        $inactive-bg-color $inactive-bg-color $inactive-text-color #00ff00
client.focused_inactive $inactive-bg-color $inactive-bg-color $inactive-text-color #00ff00
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          #00ff00

# bar
bar {
    #enable transparent i3 bar
    i3bar_command i3bar -t
    tray_output DVI-I-1
    position top
  	# status_command i3blocks -c ~/.config/i3/i3blocks.conf
    status_command ~/.config/i3/conky-i3.sh
	colors {
    # the last two digit is transparency
		background #2f343f30
	    	separator #757575
		#                  border             background         text
		focused_workspace  $bg-color          $bg-color          $text-color
		inactive_workspace $inactive-bg-color $inactive-bg-color $inactive-text-color
		urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
	}
} 

